<%- include('../partials/header') %>

<section id="show-page">
  <div>Airlines: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Departing: </div>
  <div>Departs: </div>
  <div><%= flight.departs ? 'Yes' : 'Nope' %></div>
</section>

<br><br><h2>Destinations</h2><br>
<form id="add-review-form" method="POST"
  action="/destinations/<%= flight._id %>">
  <label>Airline:</label>
  <select name="airline">
    <option value="Delta">Delta</option>
    <option value="United">United</option>
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
  </select>
  <br>
  <label>Airport</label>
  <select name="airport">
    <option value="SFO">SFO</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="JFK">JFK</option>
  <select>
  <label><br>Flight No:
    <input type="number" name="flightNo"> 
  </label><br>
  </select>
  <label>Arrival Time:
    <input type="datetime-local" name="arrival">
  </label><br>
  <input type="submit" value="Add New Destination">
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <br>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No.</th>
        <th>Arrival Time</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>

<form id="add-ticket-form" action="/tickets/<%= flight._id %>" method="POST">
  <label>Seat:</label>
  <input type="text" name="seat">
  <label>Flight:</label>
  <input type="text" name="flight">
  <label>Price:</label>
  <input type="text" name="price">
  <input type="submit" value="Add Tickets">
</form>

<%- include('../partials/footer') %>



  






